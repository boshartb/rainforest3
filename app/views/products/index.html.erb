<h1>Products#index</h1>
<div id="products">
  <% @products.each do |product| %>
    <%= link_to product_path(product.id) do %>
      <h2>
        <%= number_to_currency(product.formatted_price) %>
        <%= product.name %>
      </h2>
    <% end %>
  <% end %>
</div>
<%= link_to 'Back', products_path %>